# Gmail API Configuration Template
# Copy this file to .env and fill in your actual values

# SMS API Configuration (for smspva.com or similar services)
SMS_API_KEY=your_sms_api_key_here
SMS_API_URL=https://smspva.com/priemnik.php

# Browser Configuration
BROWSER_HEADLESS=false
MAX_CONCURRENT_BROWSERS=5

# Proxy Configuration (optional)
USE_PROXY=false
USE_FIREFOX_FOR_SOCKS5=false

# Login Optimization
SMART_LOGIN_DETECTION=true

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8010

# Debug Configuration
DEBUG_MODE=true
SAVE_SCREENSHOTS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/gmail_api.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
